<table>
<% @posts.each do |post| %>
  <tr>
    <td><img src="<%= post.user.image_url %>" alt="avatar" /></td>
    <td><%= post.user.firstname %> <%= post.user.lastname %></td>
    <td id="<%= "post_#{post.id}" %>"><%= post.content %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Publish on the wall', post, :class => 'publish', 'data-publish' => "post_#{post.id}" %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
